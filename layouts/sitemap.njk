{% extends "./_design-system-base.njk" %}

{% block content %}
  <div class="tna-section">
    <div class="tna-container">
      <div class="tna-column tna-column--width-2-3 tna-column--full-small tna-column--full-tiny">
        <h1 class="tna-heading-xl">
          {{ title }}
        </h1>
        {{ contents | safe }}
        <!--
        <h2 class="tna-heading-l">
          <a href="/design-system" class="tna-link--no-visited-state">{{ collections.home[0].title }}</a>
        </h2>
        -->
        {%- for section in collections.top %}
        <h2 class="tna-heading-l">
          <a href="/design-system/{{ section.path }}" class="tna-link--no-visited-state">{{ section.title }}</a>
        </h2>
        {% if section.description %}
          <p>{{ section.description }}</p>
        {% endif %}
        <menu class="tna-ul">
          {%- for page in collections[section.group] %}
          <li>
            <a href="/design-system/{{ page.path }}" class="tna-link--no-visited-state">{{ page.title }}</a>
            <!--
            {% if page.description %} &mdash; {{ page.description }}{% endif %}
            -->
          </li>
          {%- endfor %}
        </menu>
        {%- endfor %}
      </div>
    </div>
  </div>
{% endblock %}
