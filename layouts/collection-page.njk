{% extends "./_design-system-base.njk" %}

{% block main %}
  <div class="tna-container tna-!--margin-top-m">
    <nav class="tna-column tna-column--width-1-4 tna-column--width-1-3-medium tna-column--full-small tna-column--full-tiny" role="navigation" aria-label="{{ title }} navigation">
      <ul class="tna-ul tna-ul--plain">
      {% for component in collections[group] %}
        <li>
          <a href="/design-system/{{ component.path }}">{{ component.title }}</a>
        </li>
      {% endfor %}
      </ul>
    </nav>
    <main class="tna-column tna-column--width-3-4 tna-column--width-2-3-medium tna-column--full-small tna-column--full-tiny {{ mainClasses }}" id="main-content" role="main">
      {% if group|capitalize == title %}
        <h1 class="tna-heading tna-heading--xl">
          {{ title }}
        </h1>
      {% else %}
      <hgroup class="tna-hgroup tna-hgroup--xl">
        <p class="tna-hgroup__supertitle">{{ group|capitalize }}</p>
        <h1 class="tna-hgroup__title">{{ title }}</h1>
      </hgroup>
      {% endif %}
      {{ contents | safe }}
    </main>
  </div>
{% endblock %}
